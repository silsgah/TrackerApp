<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="6dp"
    tools:context="com.example.silas.trackapp.MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">

        <Switch
            android:id="@+id/sw_lbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:gravity="center_vertical"
            android:text="Leave Base Time       " />

        <TextView
            android:id="@+id/tv_lbt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        
        <Switch
            android:id="@+id/sw_arrsc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrive Scene Time     "
            android:layout_marginRight="15dp"
            android:enabled="false"
            />

        <TextView
            android:id="@+id/tv_arrsc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <Switch
            android:id="@+id/sw_lsc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Left Scene Time        "
            android:layout_marginRight="15dp"
            android:enabled="false"/>
        
        <TextView
            android:id="@+id/tv_lsc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title" />
    </LinearLayout>
    
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">   
        
        <Switch
            android:id="@+id/sw_lhos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Left Hospital Time     "
            android:layout_marginRight="15dp"
            android:enabled="false"/>

        <TextView
            android:id="@+id/tv_lhos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title" />
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginBottom="10dp"
        android:orientation="horizontal">
        <Switch
            android:id="@+id/sw_arrbase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Arrive Base Time        "
            android:layout_marginRight="15dp"
            android:enabled="false"/>
        <TextView
            android:id="@+id/tv_arrbase"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title" />
    </LinearLayout>

</LinearLayout>
